<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="account_move_view_form" model="ir.ui.view">
            <field name="name">account.move.view.form.inherit.l10n_ir</field>
            <field name="model">account.move</field>
            <field name="priority" eval="25"/>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="id" string="Reference Number"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_view_search" model="ir.ui.view">
            <field name="name">account.move.view.search.l0n_ir</field>
            <field name="model">account.move</field>
            <field name="priority" eval="25"/>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/field[@name='name']" position="replace">
                    <field name="name"
                           filter_domain="['|','|', ('name','ilike',self), ('ref','ilike',self), ('id','=',self)]"
                           string="Move"/>
                </xpath>
            </field>
        </record>

